<%- include('../partials/head') %>

<form action="/skills/<%= skill.id %>?_method=PUT" method="POST" >
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="<%= skill.name %>">
    <label for="description">Description</label>
    <textarea name="description" id="description" cols="30" rows="10" > <%= skill.description %> </textarea>
    <button type="submit">Save</button>
</form>

<%- include('../partials/close') %>